<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_cream"
    tools:context=".AddcrfDengueActivity">

    <LinearLayout
        android:id="@+id/dengueBars2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <View
            android:layout_width="35dp"
            android:layout_height="5.1dp"
            android:layout_marginLeft="35.6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:backgroundTint="@color/theme_green"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="35dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:backgroundTint="@color/theme_green"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="35dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:backgroundTint="@color/theme_blue"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="35dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="35dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="35dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="35dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="35dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35.6dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dengueBars2"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Patient Information"
            android:textColor="@color/theme_green"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/dengue_header2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/worksans_semibold"
            android:text="Add a Dengue Case"
            android:textColor="@color/theme_blue"
            android:textSize="30dp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_den_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="85dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:scrollbars="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dengueBars2"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_den2a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp">

            <EditText
                android:id="@+id/et_den_consulted"
                style="@style/Input"
                android:layout_width="320dp"
                android:layout_height="1.5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/inputbox"
                android:inputType="text"
                android:focusable="false"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/cons_den2a"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-10dp"
                android:background="@color/theme_cream"
                android:text="   Patient Consulted *  "
                android:textColor="@color/light_gray"
                android:textSize="15dp"
                app:layout_constraintLeft_toLeftOf="@id/et_den_consulted"
                app:layout_constraintTop_toTopOf="@id/et_den_consulted" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/radiogroup_den_consulted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/et_den_consulted"
                tools:ignore="MissingConstraints">
                <RadioButton
                    android:id="@+id/radiobutton_den_consultNo"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:buttonTint="@color/theme_darkgray"
                    android:text="No"
                    android:textColor="@color/theme_darkgray" />
                <RadioButton
                    android:id="@+id/radiobutton_den_consultYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:buttonTint="@color/theme_darkgray"
                    android:text="Yes"
                    android:textColor="@color/theme_darkgray" />

                <EditText
                    android:visibility="invisible"
                    android:id="@+id/et_den_consultDate"
                    style="@style/Input"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="-31dp"
                    android:layout_marginLeft="85dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:background="@drawable/inputbox"
                    android:focusable="false"
                    android:inputType="date"
                    android:hint="Consult Date"
                    android:textColorHint="@color/theme_gray"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/radiobutton_den_consultYes" />

                <EditText
                    android:visibility="invisible"
                    android:id="@+id/et_den_consultPlace"
                    style="@style/Input"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="85dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:background="@drawable/inputbox"
                    android:focusable="false"
                    android:inputType="date"
                    android:hint="Consult Place"
                    android:textColorHint="@color/theme_gray"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_den_consultDate" />
            </RadioGroup>

            <EditText
                android:id="@+id/et_den_admitted"
                style="@style/Input"
                android:layout_width="320dp"
                android:layout_height="1.5dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/inputbox"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/radiogroup_den_consulted"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-10dp"
                android:background="@color/theme_cream"
                android:text="   Patient Admitted *  "
                android:textColor="@color/light_gray"
                android:textSize="15dp"
                app:layout_constraintLeft_toLeftOf="@id/et_den_admitted"
                app:layout_constraintTop_toTopOf="@id/et_den_admitted" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/radiogroup_den_admitted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/et_den_admitted"
                tools:ignore="MissingConstraints">
                <RadioButton
                    android:id="@+id/radiobutton_den_admitNo"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:buttonTint="@color/theme_darkgray"
                    android:text="No"
                    android:textColor="@color/theme_darkgray" />
                <RadioButton
                    android:id="@+id/radiobutton_den_admitYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:buttonTint="@color/theme_darkgray"
                    android:text="Yes"
                    android:textColor="@color/theme_darkgray" />

                <EditText
                    android:visibility="invisible"
                    android:id="@+id/et_den_admitDate"
                    style="@style/Input"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="-31dp"
                    android:layout_marginLeft="85dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:background="@drawable/inputbox"
                    android:focusable="false"
                    android:inputType="date"
                    android:hint="Admit Date"
                    android:textColorHint="@color/theme_gray"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/radiobutton_den_consultYes" />
            </RadioGroup>

            <EditText
                android:id="@+id/et_den_onset"
                style="@style/Input"
                android:layout_width="320dp"
                android:layout_height="47dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/inputbox"
                android:inputType="textCapCharacters"
                android:focusable="false"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/radiogroup_den_admitted" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-10dp"
                android:background="@color/theme_cream"
                android:text="   Date Onset of Illness (First Symptoms) *   "
                android:textColor="@color/light_gray"
                android:textSize="15dp"
                app:layout_constraintLeft_toLeftOf="@id/et_den_onset"
                app:layout_constraintTop_toTopOf="@id/et_den_onset" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RISK FACTORS"
                android:textColor="@color/theme_blue"
                android:fontFamily="@font/worksans_semibold"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/et_den_onset"
                android:layout_marginTop="25dp"
                tools:ignore="MissingConstraints,NotSibling" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cons_den2b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                app:layout_constraintTop_toBottomOf="@+id/et_den_onset">

                <LinearLayout
                    android:id="@+id/cons_den2c"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="170dp"
                    tools:ignore="MissingConstraints">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lifestyle"
                        android:textColor="@color/theme_green"
                        android:fontFamily="@font/worksans_semibold"
                        android:textSize="16dp"
                        app:layout_constraintTop_toTopOf="@+id/cons_den2c"
                        android:layout_marginLeft="5dp"
                        tools:ignore="MissingConstraints,NotSibling" />

                    <CheckBox android:id="@+id/checkbox_den_rfL1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-3dp"
                        android:textColor="@color/theme_darkgray"
                        android:buttonTint="@color/theme_darkgray"
                        app:layout_constraintTop_toBottomOf="@id/cons_den2c"
                        tools:ignore="MissingConstraints" />
                    <CheckBox android:id="@+id/checkbox_den_rfL2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Smoking"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-5dp"
                        android:textColor="@color/theme_darkgray"
                        android:buttonTint="@color/theme_darkgray"
                        app:layout_constraintTop_toBottomOf="@id/checkbox_den_rfL1"
                        tools:ignore="MissingConstraints" />
                    <CheckBox android:id="@+id/checkbox_den_rfL3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alcoholism"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-5dp"
                        android:textColor="@color/theme_darkgray"
                        android:buttonTint="@color/theme_darkgray"
                        app:layout_constraintTop_toBottomOf="@id/checkbox_den_rfL2"
                        tools:ignore="MissingConstraints" />
                    <CheckBox android:id="@+id/checkbox_den_rfL4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drug Use"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-5dp"
                        android:textColor="@color/theme_darkgray"
                        android:buttonTint="@color/theme_darkgray"
                        app:layout_constraintTop_toBottomOf="@id/checkbox_den_rfL3"
                        tools:ignore="MissingConstraints" />
                    <CheckBox android:id="@+id/checkbox_den_rfL5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Physical Inactivity"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-5dp"
                        android:textColor="@color/theme_darkgray"
                        android:buttonTint="@color/theme_darkgray"
                        app:layout_constraintTop_toBottomOf="@id/checkbox_den_rfL4"
                        tools:ignore="MissingConstraints" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <CheckBox android:id="@+id/checkbox_den_rfL6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Others:"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="-5dp"
                            android:textColor="@color/theme_darkgray"
                            android:buttonTint="@color/theme_darkgray"
                            app:layout_constraintTop_toBottomOf="@id/checkbox_den_rfL5"
                            tools:ignore="MissingConstraints" >
                        </CheckBox>
                        <EditText
                            android:visibility="gone"
                            android:id="@+id/et_den_rfLOthers"
                            style="@style/Input"
                            android:layout_width="75dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="-4dp"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/inputbox"
                            android:inputType="textCapCharacters"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@id/checkbox_den_rfL6" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/cons_den2d"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="170dp"
                    app:layout_constraintTop_toBottomOf="@id/cons_den2c"
                    android:layout_marginTop="-190dp"
                    android:paddingLeft="0dp"
                    app:layout_constraintLeft_toRightOf="@id/cons_den2c"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/worksans_semibold"
                        android:text="Current Health Condition"
                        android:textColor="@color/theme_green"
                        android:textSize="16dp"
                        app:layout_constraintTop_toTopOf="@+id/cons_den2d"
                        tools:ignore="MissingConstraints,NotSibling" />

                    <CheckBox android:id="@+id/checkbox_den_rfC1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-3dp"
                        android:textColor="@color/theme_darkgray"
                        android:buttonTint="@color/theme_darkgray"
                        app:layout_constraintTop_toBottomOf="@id/cons_den2d"
                        tools:ignore="MissingConstraints" />
                    <CheckBox android:id="@+id/checkbox_den_rfC2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Asthma"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-5dp"
                        android:textColor="@color/theme_darkgray"
                        android:buttonTint="@color/theme_darkgray"
                        app:layout_constraintTop_toBottomOf="@id/checkbox_den_rfC1"
                        tools:ignore="MissingConstraints" />
                    <CheckBox android:id="@+id/checkbox_den_rfC3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hereditary"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-5dp"
                        android:textColor="@color/theme_darkgray"
                        android:buttonTint="@color/theme_darkgray"
                        app:layout_constraintTop_toBottomOf="@id/checkbox_den_rfC2"
                        tools:ignore="MissingConstraints" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <CheckBox android:id="@+id/checkbox_den_rfC4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Others:"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="-5dp"
                            android:textColor="@color/theme_darkgray"
                            android:buttonTint="@color/theme_darkgray"
                            app:layout_constraintTop_toBottomOf="@id/checkbox_den_rfC3"
                            tools:ignore="MissingConstraints" >
                        </CheckBox>
                        <EditText
                            android:visibility="gone"
                            android:id="@+id/et_den_rfCOthers"
                            style="@style/Input"
                            android:layout_width="75dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="-4dp"
                            android:layout_marginLeft="3dp"
                            android:background="@drawable/inputbox"
                            android:inputType="textCapCharacters"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@id/checkbox_den_rfC4" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/cons_den2e"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="170dp"
                    app:layout_constraintTop_toBottomOf="@id/cons_den2c"
                    android:layout_marginTop="10dp"
                    tools:ignore="MissingConstraints">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Historical Health Data"
                        android:textColor="@color/theme_green"
                        android:fontFamily="@font/worksans_semibold"
                        android:textSize="16dp"
                        app:layout_constraintTop_toTopOf="@+id/cons_den2e"
                        android:layout_marginLeft="5dp"
                        tools:ignore="MissingConstraints,NotSibling" />

                    <CheckBox android:id="@+id/checkbox_den_rfH1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-3dp"
                        android:textColor="@color/theme_darkgray"
                        android:buttonTint="@color/theme_darkgray"
                        app:layout_constraintTop_toBottomOf="@id/cons_den2e"
                        tools:ignore="MissingConstraints" />
                    <CheckBox android:id="@+id/checkbox_den_rfH2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diabetes"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-5dp"
                        android:textColor="@color/theme_darkgray"
                        android:buttonTint="@color/theme_darkgray"
                        app:layout_constraintTop_toBottomOf="@id/checkbox_den_rfH1"
                        tools:ignore="MissingConstraints" />
                    <CheckBox android:id="@+id/checkbox_den_rfH3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heart Disease"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-5dp"
                        android:textColor="@color/theme_darkgray"
                        android:buttonTint="@color/theme_darkgray"
                        app:layout_constraintTop_toBottomOf="@id/checkbox_den_rfH2"
                        tools:ignore="MissingConstraints" />
                    <CheckBox android:id="@+id/checkbox_den_rfH4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hypertension"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-5dp"
                        android:textColor="@color/theme_darkgray"
                        android:buttonTint="@color/theme_darkgray"
                        app:layout_constraintTop_toBottomOf="@id/checkbox_den_rfH3"
                        tools:ignore="MissingConstraints" />
                    <CheckBox android:id="@+id/checkbox_den_rfH5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Obesity"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-5dp"
