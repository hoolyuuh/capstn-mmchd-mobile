<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_cream"
    tools:context=".AddcifMeaslesActivity">

    <LinearLayout
        android:id="@+id/measlesBars3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <View
            android:layout_width="28dp"
            android:layout_height="5.1dp"
            android:layout_marginLeft="35.6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:backgroundTint="@color/theme_green"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="28dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:backgroundTint="@color/theme_green"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="28dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:backgroundTint="@color/theme_green"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="28dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:backgroundTint="@color/theme_blue"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="28dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="28dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="28dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="28dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="28dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="28dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35.6dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/measlesBars3"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Clinical Data"
            android:textColor="@color/theme_green"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/worksans_semibold"
            android:text="Add a Measles Case"
            android:textColor="@color/theme_blue"
            android:textSize="26dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="125dp"
        android:layout_marginBottom="85dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:scrollbars="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/measlesBars3"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_mea3a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp">

            <LinearLayout
                android:id="@+id/cons_mea3b"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:ignore="MissingConstraints">

                <EditText
                    android:id="@+id/et_mea_patientsymptoms"
                    style="@style/Input"
                    android:layout_width="320dp"
                    android:layout_height="1.5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/inputbox"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/cons_mea3b"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="-13dp"
                    android:background="@color/theme_cream"
                    android:text="   Symptoms shown by patient *  "
                    android:textColor="@color/light_gray"
                    android:textSize="15dp"
                    app:layout_constraintLeft_toLeftOf="@id/et_mea_patientsymptoms"
                    app:layout_constraintTop_toTopOf="@id/et_mea_patientsymptoms" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <CheckBox android:id="@+id/checkbox_mea_symp1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fever"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/theme_darkgray"
                        android:buttonTint="@color/theme_darkgray"
                        app:layout_constraintTop_toBottomOf="@id/et_mea_patientsymptoms"
                        tools:ignore="MissingConstraints" />
                    <EditText
                        android:visibility="invisible"
                        android:id="@+id/checkbox_mea_symp1date"
                        style="@style/Input"
                        android:layout_width="75dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/inputbox"
                        android:inputType="date"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:hint="Date"
                        android:textColorHint="@color/theme_gray"
                        android:textSize="15dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/checkbox_mea_symp1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <CheckBox android:id="@+id/checkbox_mea_symp2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rash"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-3dp"
                        android:textColor="@color/theme_darkgray"
                        android:buttonTint="@color/theme_darkgray"
                        app:layout_constraintTop_toBottomOf="@id/checkbox_mea_symp1"
                        tools:ignore="MissingConstraints" />
                    <EditText
                        android:visibility="invisible"
                        android:id="@+id/checkbox_mea_symp2date"
                        style="@style/Input"
                        android:layout_width="75dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/inputbox"
                        android:inputType="date"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:hint="Date"
                        android:textColorHint="@color/theme_gray"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/checkbox_mea_symp2" />
                </LinearLayout>
                <CheckBox android:id="@+id/checkbox_mea_symp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Swollen lympatic nodules (specific location)"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-4dp"
                    android:textColor="@color/theme_darkgray"
                    android:buttonTint="@color/theme_darkgray"
                    app:layout_constraintTop_toBottomOf="@id/checkbox_mea_symp2"
                    tools:ignore="MissingConstraints" />
                <CheckBox android:id="@+id/checkbox_mea_symp4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cough"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-5dp"
                    android:textColor="@color/theme_darkgray"
                    android:buttonTint="@color/theme_darkgray"
                    app:layout_constraintTop_toBottomOf="@id/checkbox_mea_symp3"
                    tools:ignore="MissingConstraints" />
                <CheckBox android:id="@+id/checkbox_mea_symp5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Koplik Sign"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-5dp"
                    android:textColor="@color/theme_darkgray"
                    android:buttonTint="@color/theme_darkgray"
                    app:layout_constraintTop_toBottomOf="@id/checkbox_mea_symp4"
                    tools:ignore="MissingConstraints" />
                <CheckBox android:id="@+id/checkbox_mea_symp6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Runny Nose"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-5dp"
                    android:textColor="@color/theme_darkgray"
                    android:buttonTint="@color/theme_darkgray"
                    app:layout_constraintTop_toBottomOf="@id/checkbox_mea_symp5"
                    tools:ignore="MissingConstraints" />
                <CheckBox android:id="@+id/checkbox_mea_symp7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Red eye / Conjunctivitis"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-5dp"
                    android:textColor="@color/theme_darkgray"
                    android:buttonTint="@color/theme_darkgray"
                    app:layout_constraintTop_toBottomOf="@id/checkbox_mea_symp6"
                    tools:ignore="MissingConstraints" />
                <CheckBox android:id="@+id/checkbox_mea_symp8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Athralgia / Arthritis"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-5dp"
                    android:textColor="@color/theme_darkgray"
                    android:buttonTint="@color/theme_darkgray"
                    app:layout_constraintTop_toBottomOf="@id/checkbox_mea_symp7"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cons_mea3c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/cons_mea3b"
                tools:ignore="MissingConstraints">

                <EditText
                    android:id="@+id/et_mea_clinicalcomplications"
                    style="@style/Input"
                    android:layout_width="320dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/inputbox"
                    android:inputType="textCapCharacters"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/cons_mea3c"
                    tools:ignore="NotSibling" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-10dp"
                    android:background="@color/theme_cream"
                    android:text="   Any other complications   "
                    android:textColor="@color/light_gray"
                    android:textSize="15dp"
                    app:layout_constraintLeft_toLeftOf="@id/et_mea_clinicalcomplications"
                    app:layout_constraintTop_toTopOf="@id/et_mea_clinicalcomplications" />

                <EditText
                    android:id="@+id/et_mea_othersymptoms"
                    style="@style/Input"
                    android:layout_width="320dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="70dp"
                    android:background="@drawable/inputbox"
                    android:inputType="textCapCharacters"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/et_mea_clinicalcomplications" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-10dp"
                    android:background="@color/theme_cream"
                    android:text="   Other symptoms   "
                    android:textColor="@color/light_gray"
                    android:textSize="15dp"
                    app:layout_constraintLeft_toLeftOf="@id/et_mea_othersymptoms"
                    app:layout_constraintTop_toTopOf="@id/et_mea_othersymptoms" />

                <EditText
                    android:id="@+id/et_mea_workingdiagnosis"
                    style="@style/Input"
                    android:layout_width="320dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="70dp"
                    android:background="@drawable/inputbox"
                    android:inputType="textCapCharacters"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/et_mea_othersymptoms" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-10dp"
                    android:background="@color/theme_cream"
                    android:text="   Working/Final Diagnosis   "
                    android:textColor="@color/light_gray"
                    android:textSize="15dp"
                    app:layout_constraintLeft_toLeftOf="@id/et_mea_workingdiagnosis"
                    app:layout_constraintTop_toTopOf="@id/et_mea_workingdiagnosis" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="end"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btn_meas_back2"
            style="@style/NoCorner"
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:layout_marginRight="15dp"
            android:backgroundTint="@color/theme_cream"
            android:fontFamily="@font/worksans_semibold"
            android:text="Back"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/theme_blue"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/btn_meas_next4"
            style="@style/NoCorner"
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:layout_marginRight="45dp"
            android:backgroundTint="#346083"
            android:fontFamily="@font/worksans_semibold"
            android:text="Next"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFFBEE"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
