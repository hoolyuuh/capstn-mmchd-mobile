<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_cream"
    tools:context=".AddcifMeaslesActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/measlesBars0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <View
                android:layout_width="28dp"
                android:layout_height="5.1dp"
                android:layout_marginLeft="35.6dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/bar"
                android:backgroundTint="@color/theme_green"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <View
                android:layout_width="28dp"
                android:layout_height="5.1dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/bar"
                android:backgroundTint="@color/theme_green"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <View
                android:layout_width="28dp"
                android:layout_height="5.1dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/bar"
                android:backgroundTint="@color/theme_green"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <View
                android:layout_width="28dp"
                android:layout_height="5.1dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/bar"
                android:backgroundTint="@color/theme_green"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <View
                android:layout_width="28dp"
                android:layout_height="5.1dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/bar"
                android:backgroundTint="@color/theme_green"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <View
                android:layout_width="28dp"
                android:layout_height="5.1dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/bar"
                android:backgroundTint="@color/theme_green"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <View
                android:layout_width="28dp"
                android:layout_height="5.1dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/bar"
                android:backgroundTint="@color/theme_green"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <View
                android:layout_width="28dp"
                android:layout_height="5.1dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/bar"
                android:backgroundTint="@color/theme_green"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <View
                android:layout_width="28dp"
                android:layout_height="5.1dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/bar"
                android:backgroundTint="@color/theme_green"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <View
                android:layout_width="28dp"
                android:layout_height="5.1dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/bar"
                android:backgroundTint="@color/theme_green"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35.6dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/measlesBars0"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text=""
                android:textColor="@color/theme_green"
                android:textSize="13dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/worksans_semibold"
                android:text="Add a Measles Case (CIF)"
                android:textColor="@color/theme_blue"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/tv_caseAddStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Submitting case, please wait..."
                android:textColor="@color/theme_green"
                android:textSize="24dp" />
            
        </LinearLayout>
        
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layout_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:flow_horizontalAlign="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/btn_home"
                style="@style/NoCorner"
                android:layout_width="125dp"
                android:layout_height="45dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/theme_cream"
                android:fontFamily="@font/worksans_semibold"
                android:text="Home"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/theme_blue"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <Button
                android:id="@+id/btn_addanothercase"
                style="@style/NoCorner"
                android:layout_width="175dp"
                android:layout_height="45dp"
                android:backgroundTint="#346083"
                android:fontFamily="@font/worksans_semibold"
                android:text="Add another case"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFBEE"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <ProgressBar
            android:id="@+id/loadingPanel"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:indeterminate="true" />
        
        <ImageView
            android:visibility="gone"
            android:id="@+id/imgCheckPanel"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/check"/>
        
    </RelativeLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>
