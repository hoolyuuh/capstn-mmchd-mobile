<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_cream"
    tools:context=".AddcifMeaslesActivity">

    <LinearLayout
        android:id="@+id/measlesBars4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <View
            android:layout_width="28dp"
            android:layout_height="5.1dp"
            android:layout_marginLeft="35.6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:backgroundTint="@color/theme_green"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="28dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:backgroundTint="@color/theme_green"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="28dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:backgroundTint="@color/theme_green"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="28dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:backgroundTint="@color/theme_green"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="28dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:backgroundTint="@color/theme_blue"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="28dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="28dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="28dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="28dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="28dp"
            android:layout_height="5.1dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/bar"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35.6dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/measlesBars4"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Vaccination History"
            android:textColor="@color/theme_green"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/worksans_semibold"
            android:text="Add a Measles Case"
            android:textColor="@color/theme_blue"
            android:textSize="26dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="125dp"
        android:layout_marginBottom="85dp"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:scrollbars="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/measlesBars4"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons_mea4a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp">

            <EditText
                android:id="@+id/et_mea_vaccincated"
                style="@style/Input"
                android:layout_width="320dp"
                android:layout_height="1.5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/inputbox"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/cons_mea4a" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-10dp"
                android:background="@color/theme_cream"
                android:text="   Patient Vaccinated *  "
                android:textColor="@color/light_gray"
                android:textSize="15dp"
                app:layout_constraintLeft_toLeftOf="@id/et_mea_vaccincated"
                app:layout_constraintTop_toTopOf="@id/et_mea_vaccincated" />
            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/radiogroup_measlesvaccination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/et_mea_vaccincated"
                tools:ignore="MissingConstraints">
                <RadioButton
                    android:id="@+id/radiobutton_measlesvaccinated"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:buttonTint="@color/theme_darkgray"
                    android:text="No"
                    android:textColor="@color/theme_darkgray" />
                <RadioButton
                    android:id="@+id/radiobutton_measlesunvaccinated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:buttonTint="@color/theme_darkgray"
                    android:text="Yes"
                    android:textColor="@color/theme_darkgray" />
            </RadioGroup>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cons_mea4b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                app:layout_constraintTop_toBottomOf="@id/et_mea_vaccincated"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/cons_mea_vaccinated"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/cons_mea4b"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="295dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        tools:ignore="MissingConstraints">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cons_mea4c"
                            android:layout_width="101dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent">
                            <EditText
                                android:id="@+id/et_mea_vaccinedoseMV"
                                style="@style/Input"
                                android:layout_width="85dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/inputbox"
                                android:inputType="number"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="@id/cons_mea4c" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="-10dp"
                                android:background="@color/theme_cream"
                                android:text="   MV  "
                                android:textColor="@color/light_gray"
                                android:textSize="15dp"
                                app:layout_constraintLeft_toLeftOf="@id/et_mea_vaccinedoseMV"
                                app:layout_constraintTop_toTopOf="@id/et_mea_vaccinedoseMV" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cons_mea4d"
                            android:layout_width="101dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent">
                            <EditText
                                android:id="@+id/et_mea_vaccinedoseMR"
                                style="@style/Input"
                                android:layout_width="85dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/inputbox"
                                android:inputType="number"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="@id/cons_mea4d" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="-10dp"
                                android:background="@color/theme_cream"
                                android:text="   MR  "
                                android:textColor="@color/light_gray"
                                android:textSize="15dp"
                                app:layout_constraintLeft_toLeftOf="@id/et_mea_vaccinedoseMR"
                                app:layout_constraintTop_toTopOf="@id/et_mea_vaccinedoseMR" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cons_mea4e"
                            android:layout_width="101dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent">
                            <EditText
                                android:id="@+id/et_mea_vaccinedoseMMR"
                                style="@style/Input"
                                android:layout_width="85dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/inputbox"
                                android:inputType="number"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="@id/cons_mea4e" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="-10dp"
                                android:background="@color/theme_cream"
                                android:text="   MMR  "
                                android:textColor="@color/light_gray"
                                android:textSize="15dp"
                                app:layout_constraintLeft_toLeftOf="@id/et_mea_vaccinedoseMMR"
                                app:layout_constraintTop_toTopOf="@id/et_mea_vaccinedoseMMR" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cons_mea4f"
                        android:layout_width="295dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                        <EditText
                            android:id="@+id/et_mea_vaccinelastdosedate"
                            style="@style/Input"
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/inputbox"
                            android:focusable="false"
                            android:inputType="date"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            app:layout_constraintTop_toTopOf="@id/cons_mea4f"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="-10dp"
                            android:background="@color/theme_cream"
                            android:text="  Last dose receive date *  "
                            android:textColor="@color/light_gray"
                            android:textSize="15dp"
                            app:layout_constraintLeft_toLeftOf="@id/et_mea_vaccinelastdosedate"
                            app:layout_constraintTop_toTopOf="@id/et_mea_vaccinelastdosedate" />

                        <EditText
                            android:id="@+id/et_mea_vaccinevalidation"
                            style="@style/Input"
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/inputbox"
                            android:focusable="false"
                            android:inputType="text"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            app:layout_constraintTop_toBottomOf="@id/et_mea_vaccinelastdosedate"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="-10dp"
                            android:background="@color/theme_cream"
                            android:text="  Vaccine validated through *  "
                            android:textColor="@color/light_gray"
                            android:textSize="15dp"
                            app:layout_constraintLeft_toLeftOf="@id/et_mea_vaccinevalidation"
                            app:layout_constraintTop_toTopOf="@id/et_mea_vaccinevalidation" />
                        <RadioGroup
                            android:id="@+id/radiogroup_vaccinevalidation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@id/et_mea_vaccinevalidation"
                            tools:ignore="MissingConstraints">
                            <RadioButton
                                android:id="@+id/radiobutton_vaccinevalidation1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="-1dp"
                                android:buttonTint="@color/theme_darkgray"
                                android:text="Vaccination Card"
                                android:textColor="@color/theme_darkgray" />
                            <RadioButton
                                android:id="@+id/radiobutton_vaccinevalidation2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="-5dp"
                                android:buttonTint="@color/theme_darkgray"
                                android:text="Logsheet"
                                android:textColor="@color/theme_darkgray" />
                            <RadioButton
                                android:id="@+id/radiobutton_vaccinevalidation3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="-5dp"
                                android:buttonTint="@color/theme_darkgray"
                                android:text="By recall"
                                android:textColor="@color/theme_darkgray" />
                            <RadioButton
                                android:id="@+id/radiobutton_vaccinevalidation4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="-5dp"
                                android:buttonTint="@color/theme_darkgray"
                                android:text="Other: "
                                android:textColor="@color/theme_darkgray" />
                            <EditText
                                android:visibility="invisible"
                                android:id="@+id/et_vaccinevalidationOther"
                                style="@style/Input"
                                android:layout_width="150dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="85dp"
                                android:layout_marginTop="-29dp"
                                android:background="@drawable/inputbox"
                                android:inputType="textCapCharacters"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="12dp" />
                        </RadioGroup>

                        <EditText
                            android:id="@+id/et_mea_vaccinecampaign"
                            style="@style/Input"
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/inputbox"
                            android:focusable="false"
                            android:inputType="text"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            app:layout_constraintTop_toBottomOf="@id/radiogroup_vaccinevalidation"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="-10dp"
                            android:background="@color/theme_cream"
                            android:text="  Vaccine received during campaign *  "
                            android:textColor="@color/light_gray"
                            android:textSize="15dp"
                            app:layout_constraintLeft_toLeftOf="@id/et_mea_vaccinecampaign"
                            app:layout_constraintTop_toTopOf="@id/et_mea_vaccinecampaign" />
                        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/radiogroup_vaccinecampaign"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@id/et_mea_vaccinecampaign"
                            tools:ignore="MissingConstraints">
                            <RadioButton
                                android:id="@+id/radiobutton_vaccinecampaignNo"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="20dp"
                                android:buttonTint="@color/theme_darkgray"
                                android:text="No"
                                android:textColor="@color/theme_darkgray" />
                            <RadioButton
                                android:id="@+id/radiobutton_vaccinecampaignYes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:buttonTint="@color/theme_darkgray"
                                android:text="Yes"
                                android:textColor="@color/theme_darkgray" />
                        </RadioGroup>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/cons_mea_unvaccinated"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/cons_mea4b"
                    tools:ignore="MissingConstraints">

                    <EditText
                        style="@style/Input"
                        android:layout_width="295dp"
                        android:layout_height="1.5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/inputbox"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:layout_gravity="center"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/cons_mea3b"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="-13dp"
                        android:background="@color/theme_cream"
                        android:text="   Reason *  "
                        android:textColor="@color/light_gray"
                        android:textSize="15dp"
                        app:layout_constraintLeft_toLeftOf="@id/et_mea_patientsymptoms"
                        app:layout_constraintTop_toTopOf="@id/et_mea_patientsymptoms" />

                    <CheckBox android:id="@+id/checkbox_novaccine1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mother was busy"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-4dp"
                        android:textColor="@color/theme_darkgray"
                        android:buttonTint="@color/theme_darkgray"
                        tools:ignore="MissingConstraints" />
                    <CheckBox android:id="@+id/checkbox_novaccine2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Against belief"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-4dp"
                        android:textColor="@color/theme_darkgray"
                        android:buttonTint="@color/theme_darkgray"
                        tools:ignore="MissingConstraints" />
                    <CheckBox android:id="@+id/checkbox_novaccine3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medical contraindication"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-4dp"
                        android:textColor="@color/theme_darkgray"
                        android:buttonTint="@color/theme_darkgray"
                        tools:ignore="MissingConstraints" />
                    <CheckBox android:id="@+id/checkbox_novaccine4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fear of side effects"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-4dp"
                        android:textColor="@color/theme_darkgray"
                        android:buttonTint="@color/theme_darkgray"
                        tools:ignore="MissingConstraints" />
                    <CheckBox android:id="@+id/checkbox_novaccine5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Child was sick"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-4dp"
